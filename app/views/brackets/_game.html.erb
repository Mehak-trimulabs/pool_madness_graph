<% first_team = pick.try(:first_team) || game.first_team %>
<% second_team = pick.try(:second_team) || game.second_team %>

<div id="match<%= game.id %>" class="match m<%= i+1 %>">
  <p <% if game == Game.championship %>id="slot127"<% end %> class="slot slot1 <%= "team#{first_team.id}" if first_team.present? %> <% if game == Game.championship && pick.try(:first_team) == pick.try(:team) && pick.try(:team).present? %>final_pick selected<% end %>">

    <% if first_team.present? %>
        <% if game.winner.present? %>
            <% if game.winner == first_team %>
                <strong>
            <% else %>
                <strike>
            <% end %>
        <% end %>
        <span class="seed"><%= first_team.seed %></span>
        <%= first_team.name %>
        <% if game.score_one.present? %><em class="score"><%= game.score_one %></em><% end %>
        <% if game.winner.present? %>
            <% if game.winner != first_team %>
                </strike>
            <% else %>
                </strong>
            <% end %>
        <% end %>
    <% end %>
  </p>
  <p <% if game == Game.championship %>id="slot128"<% end %>class="slot slot2 <%= "team#{second_team.id}" if second_team.present? %> <% if game == Game.championship && pick.try(:second_team) == pick.try(:team) && pick.try(:team).present? %>final_pick selected<% end %>">

    <% if second_team.present? %>
        <% if game.winner.present? %>
            <% if game.winner == second_team %>
                <strong>
            <% else %>
                <strike>
            <% end %>
        <% end %>
        <span class="seed"><%= second_team.seed %></span>
        <%= second_team.name %>
        <% if game.score_two.present? %><em class="score"><%= game.score_two %></em><% end %>
        <% if game.winner.present? %>
            <% if game.winner != second_team %>
                </strike>
            <% else %>
                </strong>
            <% end %>
        <% end %>
    <% end %>
  </p>
</div>
