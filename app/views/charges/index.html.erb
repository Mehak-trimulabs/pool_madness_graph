<h3>Bitcoin Payments</h3>
<div class="span12">
  <% if @pending_brackets.present? %>
      <h4>Pending</h4>
      <table class="table table-condensed table-striped">
        <thead>
        <tr>
          <th>Status</th>
          <th>Description</th>
          <th>Amount</th>
        </tr>
        </thead>
        <tbody>
        <% @pending_brackets.each do |bracket| %>
            <tr>
              <td>Unconfirmed</td>
              <td>Pool Entry: <%= link_to(bracket.name, bracket) %></td>
              <td><%= number_to_currency(10.00) %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
  <% end %>
  <% if @charges.present? %>
          <h4>Completed</h4>
      <table class="table table-condensed table-striped">
        <thead>
        <tr>
          <th>Date</th>
          <th>Description</th>
          <th>Amount</th>
        </tr>
        </thead>
        <tbody>
        <% @charges.each do |charge| %>
            <tr>
              <td><%= charge.completed_at.to_s(:usa) %></td>
              <td>Pool Entry: <%= link_to(charge.bracket.name, charge.bracket) %></td>
              <td><%= number_to_currency(charge.amount / 100.0) %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
  <% end %>
  <% if !@charges.present? && !@pending_brackets.present? %>
    <p>No payments recorded. <%= link_to "Pay for your bracket entries", brackets_path %>.</p>
  <% end %>
</div>
