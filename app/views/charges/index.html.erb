<h3>Payments</h3>
<div class="span12">
  <% if @charges.present? %>
      <table class="table table-condensed table-striped">
        <thead>
        <tr>
          <th>Date</th>
          <th>Description</th>
          <th>Amount</th>
        </tr>
        </thead>
        <tbody>
        <% @charges.each do |charge| %>
            <tr>
              <td><%= charge.completed_at.to_s(:usa) %></td>
              <td>Pool Entry: link_to(charge.bracket.name, charge.bracket) %></td>
              <td><%= number_to_currency(charge.amount / 100.0) %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
  <% else %>
    <p>No payments recorded. <%= link_to "Pay for your bracket entries", brackets_path %>.</p>
  <% end %>
</div>
