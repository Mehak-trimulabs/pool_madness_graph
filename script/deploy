#/bin/bash

if [ $1 ]; then
    heroku_env=$1
else
    heroku_env=madness
fi

if [ $heroku_env = madness ]; then
    branch=madness
    heroku_app=madness
else 
  if [ $heroku_env = bigten ]; then
    branch=big_ten
    heroku_app=bigten
  else
    if [ $heroku_env = bigten_staging ]; then
      branch=bigten_staging
      heroku_app=bigten-staging
    else
      branch=production
      heroku_app=pool-madness
    fi
  fi
fi

bundle exec rake assets:precompile
git add .
git ci -m"precompile assets for heroku"
git push -f $heroku_env ${branch}:master
bundle exec rake figaro:heroku[${heroku_app}]
heroku run rake db:migrate --remote $heroku_env

#git rm -r public/assets
#git ci -m"remove precomiled assets post deploy"
